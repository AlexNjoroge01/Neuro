generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String        @id @default(cuid())
  name         String
  price        Float
  costPrice    Float         @default(0)
  stock        Int
  unit         String        // Free-form unit to support any business
  size         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  deletedAt    DateTime?
  sales        Sale[]
  InventoryLog InventoryLog[]
}

model Sale {
  id          String   @id @default(cuid())
  productId   String
  quantity    Int
  totalPrice  Float
  profit      Float    @default(0)
  paymentMethod PaymentMethod
  createdAt   DateTime @default(now())
  deletedAt   DateTime?
  product     Product  @relation(fields: [productId], references: [id])
}

model InventoryLog {
  id          String   @id @default(cuid())
  productId   String
  change      Int      // Always positive; see `type` for direction
  type        InventoryChangeType
  reason      String
  createdAt   DateTime @default(now())
  deletedAt   DateTime?
  product     Product  @relation(fields: [productId], references: [id])
}

/// NextAuth.js models (Prisma Adapter)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  // Credentials provider fields
  passwordHash  String?

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  oauth_token       String?
  oauth_token_secret String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

enum PaymentMethod {
  CASH
  MPESA
}

enum InventoryChangeType {
  ADD
  REMOVE
}

model Expense {
  id          String   @id @default(cuid())
  category    String
  amount      Float
  description String?
  createdAt   DateTime @default(now())
  deletedAt   DateTime?
}

model Vehicle {
  id          String   @id @default(cuid())
  name        String
  type        String
  plateNumber String
  mileage     Float?
  fuelCost    Float?
  maintenance Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
  Trip        Trip[]
}

model Trip {
  id          String   @id @default(cuid())
  vehicleId   String
  route       String
  date        DateTime @default(now())
  purpose     String
  fuelUsed    Float?
  driverName  String?
  cost        Float?
  deletedAt   DateTime?
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
}

model Employee {
  id        String   @id @default(cuid())
  name      String
  role      String
  salary    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  Payroll   Payroll[]
}

model Payroll {
  id          String   @id @default(cuid())
  employeeId  String
  month       String
  amountPaid  Float
  paidAt      DateTime @default(now())
  deletedAt   DateTime?
  employee    Employee @relation(fields: [employeeId], references: [id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
